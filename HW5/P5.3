if [ "$#" -ne 1 ]
then
	echo "Missing input file"
fi

file=$1

if [ ! -f "$file" ]
then
	echo "file not found"
fi

while IFS= read -r line
do
	first_word=$(echo "$line" | sed -E "s/^([a-zA-Z0-9_]+).*/ \1/")
	last_word=$(echo "$line" | sed -E "s/.*[[:space:]]([a-zA-Z0-9_]+)$/ \1/")

	if echo "$last_word" | grep -q "${first_word}${first_word}"
	then
		echo "$line"
	fi
done < "$file"
